@model List<LearnManager.Models.User>

@{
    ViewData["Title"] = "Gérer Formateurs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    

    h2 {
        color: #007bff;
        text-align: center;
        margin-bottom: 20px;
    }

    .btn-add {
        display: block;
        width: 150px;
        margin: 0 0 20px 0; 
        padding: 10px;
        background-color: #28a745;
        color: white;
        text-align: left;
        text-decoration: none;
        border-radius: 10px;
    }

        .btn-add:hover {
            background-color: #218838;
            color: white;
        }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f1f1f1;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-delete:hover {
            background-color: #c82333;
        }

    .no-data {
        text-align: center;
        color: #666;
        margin-top: 20px;
    }
</style>

<div class="container">
    <h2>Gérer Formateurs</h2>
    <hr />
    <br />
    <a asp-action="AddFormateur" class="btn-add">Ajouter Formateur</a>

    @if (Model.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var formateur in Model)
                {
                    <tr>
                        <td>@formateur.Nom</td>
                        <td>@formateur.Prenom</td>
                        <td>@formateur.Email</td>
                        <td>@formateur.Phone</td>
                        <td>
                            <form asp-action="DeleteFormateur" method="post" onsubmit="return confirm('Voulez-vous vraiment supprimer ce formateur ?');">
                                <input type="hidden" name="id" value="@formateur.Id" />
                                <button type="submit" class="btn-delete">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="no-data">Aucun formateur trouvé.</p>
    }
</div>