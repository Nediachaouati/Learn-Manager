@model LearnManager.Models.Formation

@{
    ViewData["Title"] = Model.Titre;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #F9FAFB;
        min-height: 100vh;
        margin: 0;
        padding-bottom: 60px;
    }

   
    .formation-details-container {
        max-width: 1400px;
        margin: 80px auto 20px;
        padding: 25px;
        background-color: #FFFFFF;
        border-radius: 12px;
        box-shadow: 8px 8px 16px rgba(0, 0, 0, 0.05), -8px -8px 16px rgba(255, 255, 255, 0.8);
        transition: transform 0.3s ease;
        position: relative;
    }

        .formation-details-container:hover {
            transform: translateY(-3px);
        }

        .formation-details-container::before {
            content: '';
            position: absolute;
            top: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 40px;
            height: 40px;
            background: url('data:image/svg+xml;charset=utf-8,<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="%231E3A8A" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h20"/><path d="M21 3v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V3"/><path d="m7 8 3 3 3-3"/><path d="M17 8v8"/><path d="m2 21 20-4"/></svg>') no-repeat center;
            animation: spin 6s linear infinite;
        }

    
    @@keyframes spin {
        0% {
            transform: translateX(-50%) rotate(0deg);
        }

        100% {
            transform: translateX(-50%) rotate(360deg);
        }
    }

    .formation-details-container h2 {
        color: #1E3A8A;
        text-align: center;
        font-size: 1.8rem;
        font-weight: 800;
        margin-bottom: 30px;
        letter-spacing: 0.5px;
    }

    .formation-details-container img {
        width: 100%;
        height: 400px;
        object-fit: cover;
        border-radius: 10px;
        box-shadow: 4px 4px 8px rgba(0, 0, 0, 0.05);
        margin-bottom: 20px;
    }

    .formation-details-container p {
        font-size: 0.95rem;
        color: #1F2937;
        margin-bottom: 15px;
        line-height: 1.6;
    }

        .formation-details-container p strong {
            color: #1E3A8A;
            font-weight: 600;
        }

    .formation-details-container .btn-primary {
        background-color: #3B82F6;
        border: none;
        border-radius: 6px;
        padding: 12px 24px;
        font-size: 1rem;
        font-weight: 600;
        text-align: center;
        transition: all 0.3s ease;
        display: inline-block;
    }

        .formation-details-container .btn-primary:hover {
            background-color: #1E3A8A;
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
            transform: translateY(-2px);
        }
</style>


<section class="formation-details py-5">
    <div class="container">
        <div class="formation-details-container" data-aos="fade-up" data-aos-duration="600">
            <h2>@Model.Titre</h2>
            <div class="row">
                <div class="col-md-6" data-aos="fade-right" data-aos-duration="800">
                    <img src="@(Model.ImageUrl ?? "/images/default-formation.jpg")" class="img-fluid" alt="@Model.Titre">
                </div>
                <div class="col-md-6" data-aos="fade-left" data-aos-duration="800">
                    <p><strong>Description :</strong> @Model.Description</p>
                    <p><strong>Catégorie :</strong> @Model.Categorie</p>
                    <p><strong>Niveau :</strong> @Model.Niveau</p>
                    <p><strong>Formateur :</strong> @(Model.Formateur != null ? $"{Model.Formateur.Prenom} {Model.Formateur.Nom}" : "Non assigné")</p>
                    <p><strong>Format :</strong> @Model.Format</p>
                    <p><strong>Date de début :</strong> @Model.DateDebut.ToString("dd/MM/yyyy")</p>
                    <p><strong>Date de fin :</strong> @Model.DateFin.ToString("dd/MM/yyyy")</p>
                    <p><strong>Durée :</strong> @Model.Duree</p>
                    <p><strong>Prix :</strong> @Model.Prix</p>
                    <a href="/Account/Register" class="btn btn-primary">S'inscrire maintenant</a>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 800,
            once: true
        });
    </script>
}