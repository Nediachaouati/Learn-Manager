@model List<LearnManager.Models.Formation>

@{
    ViewData["Title"] = "Mes formations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #F9FAFB;
        min-height: 100vh;
        margin: 0;
        padding-bottom: 60px; 
    }

   
    .apprenant-container {
        max-width: 1200px;
        margin: 80px auto 20px;
        padding: 25px;
        background-color: #FFFFFF;
        border-radius: 12px;
        box-shadow: 8px 8px 16px rgba(0, 0, 0, 0.05), -8px -8px 16px rgba(255, 255, 255, 0.8);
        transition: transform 0.3s ease;
        position: relative;
    }

        .apprenant-container:hover {
            transform: translateY(-3px);
        }

        .apprenant-container::before {
            content: '';
            position: absolute;
            top: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 40px;
            height: 40px;
            background: url('data:image/svg+xml;charset=utf-8,<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="%231E3A8A" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h20"/><path d="M21 3v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V3"/><path d="m7 8 3 3 3-3"/><path d="M17 8v8"/><path d="m2 21 20-4"/></svg>') no-repeat center;
            animation: spin 6s linear infinite;
        }

    
    @@keyframes spin {
        0% {
            transform: translateX(-50%) rotate(0deg);
        }

        100% {
            transform: translateX(-50%) rotate(360deg);
        }
    }

    .apprenant-container h2 {
        color: #1E3A8A;
        text-align: center;
        font-size: 1.8rem;
        font-weight: 800;
        margin-bottom: 20px;
        letter-spacing: 0.5px;
    }

    .apprenant-container p {
        text-align: center;
        color: #1F2937;
        font-size: 0.9rem;
        margin-bottom: 20px;
    }

    
    table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background-color: #F9FAFB;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 4px 4px 8px rgba(0, 0, 0, 0.05), -4px -4px 8px rgba(255, 255, 255, 0.8);
    }

    th, td {
        padding: 12px;
        text-align: left;
        font-size: 0.85rem;
        color: #1F2937;
    }

    th {
        background-color: #E5E7EB;
        font-weight: 600;
        color: #1E3A8A;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    td {
        border-bottom: 1px solid #E5E7EB;
        transition: background-color 0.3s ease;
    }

    tr:hover td {
        background-color: #EDF2F7;
    }

    .no-data {
        text-align: center;
        color: #6B7280;
        font-size: 0.9rem;
        margin: 20px 0;
    }
</style>


<div class="container">
    <div class="apprenant-container" data-aos="fade-up" data-aos-duration="600">
        <h2>Mes formations inscrites</h2>

        @if (Model != null && Model.Count > 0)
        {
            <table>
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Catégorie</th>
                        <th>Niveau</th>
                        <th>Format</th>
                        <th>Date de début</th>
                        <th>Date de fin</th>
                        <th>Durée</th>
                        <th>Prix</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var formation in Model)
                    {
                        <tr>
                            <td>@formation.Titre</td>
                            <td>@formation.Categorie</td>
                            <td>@formation.Niveau</td>
                            <td>@formation.Format</td>
                            <td>@formation.DateDebut.ToString("dd/MM/yyyy")</td>
                            <td>@formation.DateFin.ToString("dd/MM/yyyy")</td>
                            <td>@formation.Duree</td>
                            <td>@formation.Prix</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="no-data">Aucune formation inscrite.</p>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}